<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/curved_bottom_white"
        android:gravity="center"
        android:orientation="vertical">


        <TextView
            android:id="@+id/title_simple_dialog"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/curved_top_yellow"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:letterSpacing="0.15"
            android:padding="@dimen/padding_size_16dp"
            android:text="Select Language"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_16sp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/payU"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_size_12dp"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:letterSpacing="0.12"
            android:padding="@dimen/margin_size_10dp"
            android:text="PayU"
            android:textColor="@color/black" />

        <View

            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/backGroundColor" />


        <TextView
            android:id="@+id/billDesk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:letterSpacing="0.12"
            android:padding="@dimen/margin_size_10dp"
            android:text="Bill Desk"
            android:textColor="@color/black" />


    </LinearLayout>


</RelativeLayout>